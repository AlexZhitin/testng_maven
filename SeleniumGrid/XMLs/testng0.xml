<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="Base.TestBase"/>
    </listeners>

    <parameter name="appURL" value="https://www.google.com"/>

    <test name="Chrome_tests"  parallel="methods" thread-count="5">
        <parameter name="browser" value="chrome"/>
        <!--<parameter name="browser_version" value="69.0"/>
        <parameter name="platform" value="mac"/>-->
        <classes>
            <class name="Tests.FirstTest">
                <methods>
                    <include name="GOOGLE1" />
                    <include name="GOOGLE2" />
                    <include name="GOOGLE3" />
                </methods>
            </class>
        </classes>
    </test> <!-- Second Test -->


    <test name="Firefox_tests" parallel="methods" thread-count="5">
        <parameter name="browser" value="firefox"/>
        <!--<parameter name="browser_version" value="69.0"/>
        <parameter name="platform" value="mac"/>-->
        <classes>
            <class name="Tests.FirstTest">
                <methods>
                    <include name="GOOGLE1"/>
                    <include name="GOOGLE2"/>
                    <!--<include name="GOOGLE3" />-->
                </methods>
            </class>
        </classes>
    </test> <!-- Second Test -->
</suite>